<div class="vikarov-container vikarov-procurement-config">
  <form class="vikarov-config-form">
    <!-- Row 1 -->
    <div class="form-group grid-item r1c1">
      <label>Lootable</label>
      <div class="input-container">
        <input type="checkbox" name="lootable" {{checked lootable}} />
      </div>
    </div>
    <div class="form-group grid-item r1c2">
      <label>Harvestable</label>
      <div class="input-container">
        <input type="checkbox" name="harvestable" {{checked harvestable}} />
      </div>
    </div>

    <!-- Row 2 -->
    <div class="form-group grid-item r2c1">
      <label>Loot Table</label>
      <div class="input-container">
        <select name="lootTable">
          <option value="">None</option>
          {{#each tables}}
            <option value="{{this._id}}" {{selected (eq this._id ../lootTable)}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group grid-item r2c2">
      <label>Reagent Table</label>
      <div class="input-container">
        <select name="reagentTable">
          <option value="">None</option>
          {{#each tables}}
            <option value="{{this._id}}" {{selected (eq this._id ../reagentTable)}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <!-- Row 3 -->
    <div class="form-group grid-item r3c1">
      <label>Number of Pulls Override</label>
      <div class="input-container">
        <input type="number" name="numberOfPullsOverride" value="{{numberOfPullsOverride}}" placeholder="{{globalNumberOfPulls}} (default)" />
        <p class="hint">Leave empty to use the default value ({{globalNumberOfPulls}}).</p>
      </div>
    </div>
    <div class="form-group grid-item r3c2">
      <label>Loot Chance Override (%)</label>
      <div class="input-container">
        <input type="number" name="lootChanceOverride" value="{{lootChanceOverride}}" placeholder="{{globalLootChance}} (default)" />
        <p class="hint">Leave empty to use the default value ({{globalLootChance}}).</p>
      </div>
    </div>

    <!-- Row 4 -->
    <div class="form-group grid-item r4c1">
      <label>Description</label>
      <div class="input-container">
        <textarea name="description" rows="3" placeholder="Optional description for immersion (e.g., 'A pile of bones and tattered cloth')">{{description}}</textarea>
      </div>
    </div>
    <div class="form-group grid-item r4c2">
      <button type="submit" class="vikarov-submit-button">Save</button>
      <button type="button" class="vikarov-cancel-button">Cancel</button>
    </div>
  </form>
</div>